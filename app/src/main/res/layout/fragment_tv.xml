<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TvFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragmentRvAtTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x4"
        android:layout_marginBottom="@dimen/x4" />

    <ProgressBar
        android:id="@+id/fragmentPbAtTv"
        android:layout_width="@dimen/x22"
        android:layout_height="@dimen/x22"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragmentRvAtMv"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/x12"/>

    <RelativeLayout
        android:id="@+id/errorLayoutAtTv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/grey"
            android:textAlignment="center"
            android:text="@string/nothingToShow"
            android:textSize="@dimen/xs22"
            android:textAllCaps="false"
            android:textStyle="italic"
            android:fontFamily="cursive"
            android:id="@+id/useLessSix"/>
        <ImageButton
            android:id="@+id/retryAtTv"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_centerHorizontal="true"
            android:src="@drawable/baseline_refresh_black_18dp"
            android:background="@color/white"
            android:layout_above="@id/useLessSix"
            android:layout_marginBottom="@dimen/x4"/>
    </RelativeLayout>

</RelativeLayout>